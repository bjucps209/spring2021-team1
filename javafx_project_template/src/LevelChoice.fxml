<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="LevelChoice" xmlns:fx="http://javafx.com/fxml"  stylesheets="@LevelChoice.css"
    spacing="10" prefHeight="700" prefWidth="500" styleClass = "VBox">
    <Label text="Difficulty"/>
    <HBox prefHeight="200" prefWidth="200" styleClass = "HBox">
        <RadioButton text="Easy" fx:id="DiffBtn">
            <toggleGroup>
                <ToggleGroup fx:id="group"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton text="Medium" fx:id="DiffBtn">
            <toggleGroup>
                <fx:reference source="group"/>
                </toggleGroup>
        </RadioButton>
        <RadioButton text="Hard" fx:id="DiffBtn">
            <toggleGroup>
                <fx:reference source="group"/>
            </toggleGroup>
        </RadioButton>
    </HBox>

    <Label text="Levels"/>
    <HBox prefHeight="200" prefWidth="200" styleClass = "HBox">
        <RadioButton text="Level 1" fx:id="SeqBtn">
            <toggleGroup>
                <ToggleGroup fx:id="level"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton text="Level 2" fx:id="SeqBtn">
            <toggleGroup>
                <fx:reference source="level"/>
                </toggleGroup>
        </RadioButton>
        <RadioButton text="Level 3" fx:id="SeqBtn">
            <toggleGroup>
                <fx:reference source="level"/>
            </toggleGroup>
        </RadioButton>
    </HBox>
    <Button fx:id="btnStart" text="Start" onAction="#onStartClicked" style="-fx-font: 30px Tahoma; -fx-background-color: #318AE0; -fx-text-fill: black;"/>
    <Button fx:id="btnBackStart" onAction="#onBackClicked" text="Back"/>

</VBox>