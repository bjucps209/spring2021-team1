<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="GameWindow" xmlns:fx="http://javafx.com/fxml"  stylesheets="GameWindow.css"
    spacing="10" maxHeight="1500"  style="-fx-background-color: black;" maxWidth="600" alignment="CENTER_RIGHT" fx:id="hbox" onKeyPressed="#keyPressed">
        

    <HBox>
        <Label styleClass="VboxLabel" text="Lives"/>
        <Label styleClass="VboxchangingLabel" fx:id="lblLife"/>

        <Label styleClass="VboxLabel" text="Scores"/>
        <Label styleClass="VboxchangingLabel" fx:id="lblScore"/>
    </HBox>


    <Pane maxHeight="600" prefWidth="1250" style="-fx-background-color: lightgrey" styleClass="Pane" fx:id="paneMain"/>
    

</VBox>